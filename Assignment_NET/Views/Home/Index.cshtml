@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<Assignment_NET.Models.Category>
@*@model Assignment_NET.Models.Product*@

@section css
{
    <link href="~/CSS/Index/index.css" rel="stylesheet" />
    <link href="~/CSS/Product/product.css" rel="stylesheet" />
}


<div class="row menu-top">
    <div class="left-menu col-lg-3 col-md-12">
        <div class="title">
            <h6 class="title-name">CATEGORY</h6>
            <div><i class="fas fa-bars icon"></i></div>
        </div>
        <ul class="cate-list">
            @foreach (var item in Model)
            {

            <a href="/Products/Category/@item.Id">
                <li class="cate-item">
                    <img src="~/Content/icons/@item.Icon" />
                    @item.Name
                </li>
            </a>
            }
        </ul>
    </div>
    <div class="right-menu col-lg-9 col-md-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Content/images/fashion_o.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Content/images/fashion2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Content/images/banner2.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="products">
    <div class="male-product">
        <div style=" border-bottom : 1px solid #eee;">
            <span class="title"><img class="title-icon" src="~/Content/icons/boy.png" />Boy Fashion</span>
        </div>
        <div class="list-product row">
            @for (int i = 0; i < ViewBag.MaleProducts.Count; i++)
            {
                <div class="col-lg-3 col-6">
                    <div class="product">
                        <div class="product-img">
                            <a href="/Products/Details/@ViewBag.MaleProducts[i].Id">
                                <img class="img-responsive" alt="product" src="~/Content/images/products/@ViewBag.MaleProducts[i].Image">
                            </a>
                            <div class="overlay">
                                <a href="/Products/Details/@ViewBag.MaleProducts[i].Id" class="view"><i class="fas fa-eye mr-1"></i>View</a>
                                <div class="view confirm-buy" data-toggle="modal" data-target="#confirm-buy"  product-id ="@ViewBag.MaleProducts[i].Id"><i class="fas fa-cart-plus mr-1"></i>Buy</div>
                            </div>
                        </div>

                        <div class="product-info">
                            <div class="product-name">@ViewBag.MaleProducts[i].Name</div>
                            <div class="product-price">@ViewBag.MaleProducts[i].Price</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="female-product">
        <div  style=" border-bottom : 1px solid #eee;">
            <span class="title"><img class="title-icon" src="~/Content/icons/girl.png" />Girl Fashion</span>
        </div>
        <div class="list-product row">
            @for (int i = 0; i < ViewBag.FemaleProducts.Count; i++)
            {
                <div class="col-lg-3 col-6">
                    <div class="product">
                        <div class="product-img">
                            <a href="/Products/Details/@ViewBag.FemaleProducts[i].Id">
                                <img class="img-responsive" alt="product" src="~/Content/images/products/@ViewBag.FemaleProducts[i].Image">
                            </a>
                            <div class="overlay">
                                <div class="view"><i class="fas fa-eye mr-1"></i>View</div>
                                <div class="view confirm-buy" data-toggle="modal" data-target="#confirm-buy" product-id ="@ViewBag.FemaleProducts[i].Id"><i class="fas fa-cart-plus mr-1"></i>Buy</div>
                            </div>
                        </div>

                        <div class="product-info">
                            <div class="product-name">@ViewBag.FemaleProducts[i].Name</div>
                            <div class="product-price">@ViewBag.FemaleProducts[i].Price</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

