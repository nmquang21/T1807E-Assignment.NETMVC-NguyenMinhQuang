<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
</head>
<body>

    <div class="header">
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-image: radial-gradient(circle 248px at center, #16d9e3 0%, #30c7ec 47%, #46aef7 100%); font-weight: 600">
            <div class="container">
                <a class="navbar-brand" href="/Home">FASHTION BABY</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/About">About</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Contact">Contact</a>
                        </li>
                    </ul>
                    <form class="form-inline" method="post" action="/Products/Search">
                        <input class="form-control mr-sm-2" type="text" name="search_value" placeholder="Search" aria-label="Search" value="@{if (ViewBag.SearchText != null) { @ViewBag.SearchText}}">
                        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>

                        <div class="dropdown">

                            <a class="cart" href="/Buy/CartDetail">
                                <i class="fas fa-cart-plus cart-icon"></i>
                                <span class="cart-quantity" id="cart-quantity">
                                    @if (Session["ItemQuantity"] != null)
                                    {
                                        @Session["ItemQuantity"]
                                    }
                                    else
                                    {
                                        <text>0</text>
                                    }
                                </span>
                            </a>

                        </div>
                    </form>

                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div class="modal fade" id="confirm-buy" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 class="modal-title" id="exampleModalLabel">Do you want buy this Product?</h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span style="outline:none" aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @*<div class="modal-body">
                            ...
                        </div>*@
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="accept-buy">Buy</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/custom/format-data.js"></script>
    <script type="text/javascript" src="~/Scripts/custom/buy-product.js"></script>
    <script type="text/javascript" src="~/Scripts/custom/search.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
